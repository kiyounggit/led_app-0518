extends layout

block content

  script(src='/javascripts/light.js')
    
  h1= title
  p Welcome to #{title}
  ul
    each val, index in sensors
      li(id=val._id)= index + ': ' + val.name + '(' + val.switch + ')' + val._id
        if val.switch == "off"
          img(src='/images/light_off.png', id='img_light'+index)
        else
          img(src='/images/light_on.png', id='img_light'+index)
        button(id='ledbutton'+index) 눌러!

  each v, index in sensors
    script(type="text/javascript").
      document.getElementById( "ledbutton"+#{index})
        .addEventListener("click", function() {
            toggleImage(#{index}, "#{v._id}");
        }, false);

